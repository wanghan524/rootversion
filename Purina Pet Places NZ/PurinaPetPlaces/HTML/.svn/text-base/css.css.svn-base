body{padding:0 0 10px 0; margin:0; font-family:Arial, Helvetica, sans-serif;}
#header-image { width: 38%; }
#header-image-products { width: 48%; }
#header-bar { background-color: #eb3a2f; width: 100%; }
div.wrapper{ padding-left:20px; padding-right: 20px; max-width: 650px; }
div.wrappertips{ padding-left:20px; padding-right: 20px; max-width: 650px; }
div.wrappertips p{ padding:0; margin-top:0;}
a{color:#000000;}
p{ padding-left: 12px; padding-right: 12px; }
p.padding{}
p.nopadding{ padding:0; margin:0;}
.gray{color:#858585; text-decoration:none;}
.red{color:#c71912;}
ul{ list-style-type:square;}
h1{ margin-bottom:0; padding:0; font-size:20px;}
h2{ color:#eb3a2f; padding-left: 12px; padding-right:5%;}
h3{ background:#eb3a2f; color:#ffffff; padding-top:15px; padding-right:5%; padding-bottom:15px; padding-left:5%;}
.purinalogo{background:#1d1d1b; padding-top:15px; padding-bottom:15px;}
.divider { width: 100%; height: 4px; background-color: transparent; clear: both; margin-top: 10px; margin-bottom: 10px; font-size: 0; text-indent: -9999px; overflow: hidden; }
.contact-table { padding-left: 12px; padding-right: 12px; width: 100%; }

@media (min-width: 670px) {
	#header-image { width: 22%; }
	#header-image-products { width: 31%; }

}